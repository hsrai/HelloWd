<Window x:Class="HelloWd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWd"
        mc:Ignorable="d"
        Title="Greeting" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="Instruction" HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button" VerticalAlignment="Top"/>
        <RadioButton x:Name="HelloButton" Content="Hello" IsChecked="True" HorizontalAlignment="Left" Margin="250,80,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="GoodbyeButton" Content="GoodBye" HorizontalAlignment="Left" Margin="550,80,0,0" VerticalAlignment="Top"/>
        <Button Content="Display" HorizontalAlignment="Center" Margin="0,167,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
